<div class="post">
  <div class="wrap-ut pull-left">

    <div class="userinfo pull-left">
        <div class="avatar">
          <%= image_tag('avatar.png', width: 50) %>
          <%= link_to post['user_name'], '' %>
        </div>
    </div>

    <div class="posttext pull-left">
      <h2><%= link_to post['title'], post_path(post['id']) %></h2>
      <p><%= post['body']%></p>
    </div>

    <div class="clearfix"></div>

    <%= render 'posts/comments', comments: post['comments'] %>
  </div>
  
  <div class="postinfo pull-left">
    <div class="comments">
      <div class="commentbg">
        <%= post['count_comments']%>
        <div class="mark"> </div>
      </div>
    </div>                                 
  </div>

  <div class="clearfix"></div>
</div>